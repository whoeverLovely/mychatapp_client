<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/chatbox_friendName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        tools:text="Aha"/>

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:layout_below="@+id/chatbox_friendName">

        <TextView
            android:id="@+id/chatbox_displayMsg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:text="Aha: this is a test message."/>
    </ScrollView>

    <EditText
        android:id="@+id/chatbox_textEditor"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        tools:text="i want to send msg"/>

    <Button
        android:id="@+id/chatbox_sendButton"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/chatbox_textEditor"
        android:layout_toEndOf="@+id/chatbox_textEditor"
        android:text="Send"/>

</RelativeLayout>
